{
    "manifest_version": 3,
    "name": "ChatGPT Chat Exporter",
    "version": "0.0.1",
    "description": "Export ChatGPT conversation history to JSON format",
    "permissions": [
      "activeTab",
      "downloads",
      "storage"
    ],
    "host_permissions": [
      "https://chat.openai.com/c/*"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["https://chat.openai.com/c/*"],
        "js": ["content.js"]
      }
    ],
    "icons": {
        "16": "icons/ChatGPT-Logo_16.jpg",
        "32": "icons/ChatGPT-Logo_32.jpg",
        "48": "icons/ChatGPT-Logo_48.jpg",
        "128": "icons/ChatGPT-Logo_128.jpg"
    }
  }